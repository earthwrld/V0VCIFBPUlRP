---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404: Not Found">
  <main class="flex-1 flex flex-col items-center justify-center text-center px-4">
    <div class="max-w-md w-full">
      <h1 class="text-9xl font-bold text-red-500">404</h1>
      <p class="text-2xl md:text-3xl font-semibold mt-4">Page Not Found</p>
      
      <div class="mt-6 text-left bg-gray-800/50 p-4 rounded-lg font-mono text-sm text-white/80 border border-gray-700">
        <p class="text-gray-400">> root@boemi:~# get-content ./this-page</p>
        <p><span class="text-red-500">Error:</span> Cannot find path './this-page' because it does not exist.</p>
      </div>

      <a href="/" class="mt-8 inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
        Go Back Home
      </a>
    </div>
  </main>
</BaseLayout>